@{
    Layout = null;
}
<div class="ng-hide" ng-show="!loading">
    <div class="item item-avatar">
        <img ng-src="{{EmployeeInstitution.EmployeeModel.HeadImgUrl}}">
        <h2>{{EmployeeInstitution.EmployeeModel.Name}}</h2>
        <p>{{EmployeeInstitution.EmployeeModel.Code}}</p>
    </div>
    <div class="weui-cells">
        @*ui-sref="detail({id:item.Id, reload:true})*@
        <a class="weui-cell weui-cell_access" ng-repeat="item in EmployeeInstitution.InstitutionModels" ng-click="redirectdetail(item)">
            <div class="weui-cell__bd">
                <p>{{item.Name}}</p>
            </div>
            <div class="weui-cell__ft">
            </div>
        </a>
    </div>
    <div class="weui-msg__opr-area">
        <p class="weui-btn-area">
            <a href="#" class="weui-btn weui-btn_primary" ui-sref="scoreboard">查看积分排行榜</a>
        </p>
    </div>
</div>

<!--BEGIN warning dialog-->
<div class="js_dialog ng-hide" id="warning" ng-show="warningdialog.show">
    <div class="weui-mask"></div>
    <div class="weui-dialog">
        <div class="weui-dialog__bd">{{warningdialog.content}}</div>
        <div class="weui-dialog__ft">
            <a href="javascript:;" class="weui-dialog__btn weui-dialog__btn_primary" ng-click="warningdialogconfirm()">知道了</a>
        </div>
    </div>
</div>
<div id="loadingToast" ng-show="loading">
    <div class="weui-mask_transparent"></div>
    <div class="weui-toast">
        <i class="weui-loading weui-icon_toast"></i>
        <p class="weui-toast__content">数据加载中</p>
    </div>
</div>
